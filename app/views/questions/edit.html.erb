<h3>Edit Question</h3>

<%= form_for @question do |f| %>
  <div class = "field">
    <%= f.label :title %>
    <%= f.text_field :title  %>
  </div>

  <div class = "field">
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
  </div>

  <div class ="actions">
    <%= f.submit value: "Submit Changes" %>
  </div>
<% end %>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
